<div class="user_container">
  <div class="user_img">
    <%= image_tag("image1.jpg", width:'100vw') %>
  </div>
  <div class="user_data">
    <h2><%= @user.name%></h2>
    <p>Number of posts: <%= @user.posts_counter%></p>
  </div>
</div>

<div class="user_container2">
  <div class="user_data">
    <h2>Bio</h2>
    <p><%= @user.bio%></p>
  </div>
</div>

<% @user.recent_3_posts.each do |post| %>
  <div class="user_container">
      <h2><%= post.title%></h2>
      <p><%= post.text%></p>
      <h3>Comment <%= post.comments_counter%></h3>
      <h4> Likes<%= post.likes_counter%></h4>
  </div>
<%end%>

<div>
<a>
    <%= link_to "See all posts", user_posts_path(@user) %>
</a>
</div>